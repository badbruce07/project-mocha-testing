<!DOCTYPE html>
<html>
    <head>
        <title><%= title %></title>
        <link rel="stylesheet" href="/stylesheets/style.css" />
        <link rel="stylesheet" href="/stylesheets/controls.css"/>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
        <script src="/javascripts/global.js"></script>
    </head>

    <body>
        <p>Welcome to our test </p>

        <!-- User Information-->
        <h2> User Info </h2>
        <div id="userInfo">
          <p>
            <strong>Name: </strong>
            <span id='userInfoName'></span>
            <br/>
            <strong> Age: </strong>
            <span id='userInfoAge'></span>
            <br/>
            <strong> Gender: </strong>
            <span id='userInfoGender'></span>
            <br/>
            <strong> Location: </strong>
            <span id='userInfoLocation'></span>
          </p>
        </div>

        <!-- User List in a tabular form -->
        <h2> User List </h2>
        <div id="userList">
          <table>
            <thead>
            <th>UserName</th>
            <th>Email </th>
            <th>Delete/Update?</th>
            </thead>
            <tbody>

            </tbody>
          </table>
        </div>

        <div id="addUserPanel">

          <!-- Adding a new user-->
          <h2> Add User </h2>

          <div id="addUser">
            <fieldset>

              <input type="text" id="inputUserName" placeholder="Username"/>
              <input type="text" id="inputUserEmail" placeholder="Email"/>
              <br/>
              <input type="text" id="inputUserFullName" placeholder="Full Name"/>
              <input type="text" id="inputUserAge" placeholder="Age"/>
              <br/>
              <input type="text" id="inputUserLocation" placeholder="Location"/>
              <input type="text" id="inputUserGender" placeholder=" Gender"/>
              <br/>
              <button id="btnAddUser"> Add User </button>

            </fieldset>

          </div>

        </div>

        <br/>
        <br/>

        <!-- Updating a new user but appears when update button is clicked -->
        <div id="updateUserPanel">

          <h2> Update User </h2>

          <div id="updateUser">

            <fieldset>

              <input type="text" id="updateUserName" placeholder="User Name"/>
              <input type="text" id="updateUserEmail" placeholder="Email"/>
              <br/>
              <input type="text" id="updateUserFullName" placeholder="Full Name"/>
              <input type="text" id="updateUserAge" placeholder="Age"/>
              <br/>
              <input type="text" id="updateUserLocation" placeholder="Location"/>
              <input type="text" id="updateUserGender" placeholder=" Gender"/>
              <br/>
              <button id="btnUpdateUser"> Update User </button>
              <button id ="btnCancelUpdateUser"> Cancel </button>

            </fieldset>

          </div>

        </div>

    </body>

</html>